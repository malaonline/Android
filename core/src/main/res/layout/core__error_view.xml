<?xml version="1.0" encoding="utf-8"?>
<com.malalaoshi.android.core.view.ErrorView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">
    <ImageView
        android:id="@+id/iv_error_img"
        android:layout_marginTop="-35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/core__network_error"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="网络出错了~"/>

    <TextView
        android:id="@+id/tv_error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="点击重试"
        android:textColor="@color/color_blue_82b4d9_f2"
        android:textSize="@dimen/core__text_size_normal_x"
        android:background="@drawable/core__selector_browse_comments"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        />
</com.malalaoshi.android.core.view.ErrorView>