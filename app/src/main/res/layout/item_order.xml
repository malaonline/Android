<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_order_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_order_item_gray"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_order_item_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_white_ffffff_88"
            />

        <TextView
            android:id="@+id/tv_order_item_status"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_order_item_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lines="1"
                />

            <TextView
                android:id="@+id/tv_order_item_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lines="1"
                />

            <TextView
                android:id="@+id/tv_order_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:lines="1"
                />

            <TextView
                android:id="@+id/tv_order_item_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="14dp"
                android:lines="1"
                />
        </LinearLayout>

        <com.malalaoshi.android.ui.widgets.DoubleImageView
            android:id="@+id/div_order_item_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            app:div_bigBorderColor="@color/main_color"
            app:div_bigBorderWidth="4dp"
            app:div_bigImgSize="67dp"
            app:div_smallBorderColor="@color/main_color"
            app:div_smallBorderWidth="2dp"
            app:div_smallImgSize="48dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/view_order_item_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_bg"
        />

    <LinearLayout
        android:id="@+id/ll_order_item_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_order_item_cancel"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/selector_semicircle_gray_frame_btn_bg"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/color_black_a0a3ab"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_order_item_buy"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:background="@drawable/selector_semicircle_red_frame_btn_bg"
            android:gravity="center"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>
