<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="11dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="18dp">
        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_avatar_icon_black"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_blue_8fbcdd"
            android:textSize="@dimen/text_size_small_high"/>

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_subject"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_939393"
            android:textSize="@dimen/text_size_small_high"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="8dp"
                android:maxLines="1"
                android:textColor="@color/color_black_939393"
                android:textSize="@dimen/text_size_small_high"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black_939393"
                android:textSize="@dimen/text_size_small_high"/>
        </LinearLayout>

        <TextView
            tools:text="正通创意中心"
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_location"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black_939393"
            android:textSize="@dimen/text_size_small_high"/>
        <TextView
            tools:text="洛阳市什么什么区洛阳市什么什么区"
            android:id="@+id/tv_address"
            style="@style/order_detail_card_text_black_light"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/color_black_939393"
            android:paddingBottom="6dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_line"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_below="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/color_gray_dadada"/>
    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/mala.ratingbar_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"/>
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginRight="5dp"
        android:background="@color/color_gray_dadada"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="71dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_red_border_btn"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/color_red_e26254"
            android:textSize="12sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_no_comment"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:text="待评"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_high"/>

        <com.malalaoshi.android.core.image.MalaImageView
            android:id="@+id/iv_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_default_avatar"/>
        <com.malalaoshi.android.ui.widgets.DoubleAvatarView
            android:id="@+id/iv_live_course_avator"
            android:visibility="gone"
            android:padding="7dp"
            android:background="@drawable/ic_double_teacher_avatar_bg"
            android:layout_marginTop="18dp"
            android:layout_width="70dp"
            android:layout_height="44dp"
            />
    </LinearLayout>

</RelativeLayout>