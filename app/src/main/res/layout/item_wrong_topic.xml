<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/tv_topic_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动词不定式"
        android:lines="1"
        android:maxLength="10"
        android:background="@drawable/shape_gray_semicircle_hollow_bg"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/color_black_a0a3ab"
        />
    <TextView
        android:id="@+id/tv_topic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="17/05/10 10:30"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/color_black_a0a3ab"
        android:ellipsize="end"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/tv_topic_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Hobo, _____ wake me up ________ you finish building another house for me."
        android:layout_marginTop="33dp"
        android:lineSpacingExtra="6sp"
        android:letterSpacing="0.02"
        android:textColor="@color/color_black_373a41"
        android:textSize="@dimen/text_size_large"
        android:lines="2"
        />

</FrameLayout>