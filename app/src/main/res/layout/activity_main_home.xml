<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xml:app="http://schemas.android.com/apk/auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <include
        android:id="@+id/home_title"
        layout="@layout/home_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"/>
    <!--<View-->
        <!--android:background="@color/color_gray_dadada"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"/>-->

    <com.malalaoshi.android.ui.tabindicator.ViewPagerIndicator
        android:id="@+id/indicator_tabs"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:vpTabTextColor="@color/white"
        app:vpTabTextSize="18sp"
        app:vpTabTextFocusColor="@color/white"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:background="@color/color_gray_dadada"
        android:layout_height="0.5dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_bg"
        />

</LinearLayout>


