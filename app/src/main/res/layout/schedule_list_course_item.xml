<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_333333"
            android:textSize="30sp"
            tools:text="28"/>

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_xlarge"
            tools:text="周五"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_schedule_course_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_blue_shadow_white"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/fl_schedule"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/shape_top_radiu_blue"
            >

            <TextView
                android:id="@+id/tv_grade_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                tools:text="初一语文"
                />

            <ImageView
                android:id="@+id/iv_live_course_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/tab_schedule_double_teachers_yellow"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            >

            <TextView
                android:id="@+id/tv_teacher_name"
                style="@style/schedule_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                tools:text="教师姓名：郭德纲"
                />

            <TextView
                android:id="@+id/tv_teacher_assist"
                style="@style/schedule_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lines="1"
                android:textColor="@color/color_black_a0a3ab"
                tools:text="助教：欧阳娜娜"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_class_time"
            style="@style/schedule_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="上课时间：10:00-12:00"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地点："
                android:textColor="@color/color_black_a0a3ab"
                android:textSize="@dimen/core__text_size_large"
                />

            <TextView
                android:id="@+id/tv_class_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/core__text_size_large"
                tools:text="洛阳市麻辣中心洛阳市麻辣中心洛阳市麻辣中心"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_class_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_black_333333"
            android:textSize="12sp"
            tools:text="洛阳市麻辣中心（黄河店）洛阳市麻辣中心（黄河店）"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/main_bg"/>

        <TextView
            android:id="@+id/tv_course_comment"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lines="1"
            tools:text="评价已过期"
            />
    </LinearLayout>
</LinearLayout>
