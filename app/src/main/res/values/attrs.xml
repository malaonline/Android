<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="selectableItemBackgroundGeneral" format="color|reference" />
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <declare-styleable name="CircleView">
        <attr name="cv_color" format="color" />
        <attr name="cv_radius" format="integer" />
    </declare-styleable>

    <!-- 日历课表 -->
    <declare-styleable name="DayPickerView">
        <attr name="topPadding" format="dimension" />
        <attr name="bottomPadding" format="dimension" />
        <attr name="leftPadding" format="dimension" />
        <attr name="rightPadding" format="dimension" />

        <attr name="monthTopPadding" format="dimension" />
        <attr name="monthBottomPadding" format="dimension" />
        <attr name="monthTextSize" format="dimension" />
        <attr name="dayTopPadding" format="dimension" />
        <attr name="dayBottomPadding" format="dimension" />
        <attr name="daySpacing" format="dimension" />
        <attr name="dayTextSize" format="dimension" />
        <attr name="dayLabelTextSize" format="dimension" />

        <attr name="splitLineStrokeHeight" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleSmallRadius" format="dimension" />
        <attr name="circleSmallDis" format="dimension" />

        <attr name="enablePreviousDay" format="boolean" />

        <attr name="splitLineColor" format="color" />
        <attr name="textSelectColor" format="color" />
        <attr name="selectColor" format="color" />
        <attr name="textNormalColor" format="color" />
        <attr name="previousSelectColor" format="color" />
        <attr name="firstYear" format="dimension" />
        <attr name="firstMonth" format="enum">
            <enum name="january" value="0" />
            <enum name="february" value="1" />
            <enum name="march" value="2" />
            <enum name="april" value="3" />
            <enum name="may" value="4" />
            <enum name="june" value="5" />
            <enum name="july" value="6" />
            <enum name="august" value="7" />
            <enum name="september" value="8" />
            <enum name="october" value="9" />
            <enum name="november" value="10" />
            <enum name="december" value="11" />
        </attr>
        <attr name="lastMonth" format="enum">
            <enum name="january" value="0" />
            <enum name="february" value="1" />
            <enum name="march" value="2" />
            <enum name="april" value="3" />
            <enum name="may" value="4" />
            <enum name="june" value="5" />
            <enum name="july" value="6" />
            <enum name="august" value="7" />
            <enum name="september" value="8" />
            <enum name="october" value="9" />
            <enum name="november" value="10" />
            <enum name="december" value="11" />
        </attr>
        <attr name="currentDaySelected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BorderTextView">
        <attr name="BottomBorder" format="dimension" />
        <attr name="RightBorder" format="dimension" />
        <attr name="LeftBorder" format="dimension" />
        <attr name="TopBorder" format="dimension" />
        <attr name="BorderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="GifMoviewView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifMoviewViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpTabTextSize" format="dimension" />
        <attr name="vpTabTextColor" format="color" />
        <attr name="vpTabTextFocusColor" format="color" />
        <attr name="vpTabFocusPos" format="integer" />
    </declare-styleable>

    <declare-styleable name="RingProgressbar">
        <attr name="progress_backgroud_color" format="color"/>
        <attr name="progress_color" format="color"/>
        <attr name="progress_ring_radius" format="dimension"/>
        <attr name="progress_stroke_width" format="dimension"/>
        <attr name="progress_value" format="float"/>
        <attr name="progress_max_value" format="float"/>
    </declare-styleable>
    <declare-styleable name="DoubleImageView">
        <attr name="div_bigImgSize" format="dimension"/>
        <attr name="div_smallImgSize" format="dimension"/>
        <attr name="div_bigBorderWidth" format="dimension"/>
        <attr name="div_smallBorderWidth" format="dimension"/>
        <attr name="div_bigBorderColor" format="color"/>
        <attr name="div_smallBorderColor" format="color"/>
    </declare-styleable>
</resources>